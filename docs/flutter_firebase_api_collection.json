              }
            ],
            "url": {
              "raw": "{{firestore_api_endpoint}}/databases/{{firestore_database}}/documents/posts/{{post_id}}",
              "protocol": "https",
              "host": ["firestore.googleapis.com"]
            }
          }
        }
      ]
    },
    {
      "name": "Firebase Storage",
      "item": [
        {
          "name": "Upload Post Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_id_token}}"
              },
              {
                "key": "Content-Type",
                "value": "image/jpeg"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "[Binary image data]"
            },
            "url": {
              "raw": "{{firebase_storage_endpoint}}/b/{{firebase_project_id}}.appspot.com/o/posts/{{user_id}}/{{timestamp}}.jpg?uploadType=media",
              "protocol": "https",
              "host": ["www.googleapis.com"],
              "path": ["upload", "storage", "v1", "b", "{{firebase_project_id}}.appspot.com", "o"],
              "query": [
                {
                  "key": "uploadType",
                  "value": "media"
                }
              ]
            }
          }
        },
        {
          "name": "Get Download URL",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_id_token}}"
              }
            ],
            "url": {
              "raw": "{{firebase_storage_endpoint}}/b/{{firebase_project_id}}.appspot.com/o/posts/{{user_id}}/{{image_name}}?alt=media",
              "protocol": "https",
              "host": ["www.googleapis.com"],
              "query": [
                {
                  "key": "alt",
                  "value": "media"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Image",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_id_token}}"
              }
            ],
            "url": {
              "raw": "{{firebase_storage_endpoint}}/b/{{firebase_project_id}}.appspot.com/o/posts/{{user_id}}/{{image_name}}",
              "protocol": "https",
              "host": ["www.googleapis.com"]
            }
          }
        }
      ]
    }
